name:                Pruvarilo
version:             0.1.0.0
synopsis:            Automatic organizational tool for the Pruvaro proof collection.
-- description:
-- bug-reports:
license:             BSD3
license-file:        LICENSE
author:              Ajnaj
-- maintainer:
-- copyright:
category:            Development
build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md

library
  exposed-modules      : Config
                       , CompileManagement
                       , DocumentationManagement
                       , PathInfo
                       , ProjectFileManagement
                       , SubstitutionParser
  -- other-modules:
  -- other-extensions:
  build-depends        : base >=4.11 && <4.12
                       , config-ini >=0.2.0.0 && <0.3.0.0
                       , filepath >=1.0.0.0 && <2.0.0.0
                       , safe ==0.3.19
                       , text >=1.0.0.0 && <2.0.0.0
                       , transformers <0.1.0.0 || >0.1.0.0 && <0.2.2.0 || >0.2.2.0 && <0.4.0.0 || >0.4.0.0 && <0.5.0.2 || >0.5.0.2 && <0.5.3.0 || >0.5.3.0 && <0.5.3.1 || >0.5.3.1 && <0.5.5.1 || >0.5.5.1 && <0.5.6.0 || >0.5.6.0 && <0.5.6.1 || >0.5.6.1 && <0.6.0.0 || >0.6.0.0 && <0.6.0.1 || >0.6.0.1
                       , unliftio ==0.2.19
                       , unliftio-core ==0.2.0.1
  hs-source-dirs:      lib
  default-language:    Haskell2010

executable pruvarilo
  main-is:             Main.hs
  other-modules        : CommandLineArguments
                       , Modes
                       , Modes.AddMode
                       , Modes.BuildMode
                       , Modes.DocMode
                       , Modes.RemoveMode
                       , Modes.Internal
  -- other-extensions:
  build-depends        : Pruvarilo
                       , base >=4.11 && <4.12
                       , filepath ==1.4.2.1
                       , optparse-applicative >=0.14.3.0 && <0.17.0.0
                       , prettyprinter <0.1 || >0.1
                       , prettyprinter-ansi-terminal <0.1 || >0.1
                       , transformers <0.1.0.0 || >0.1.0.0 && <0.2.2.0 || >0.2.2.0 && <0.4.0.0 || >0.4.0.0 && <0.5.0.2 || >0.5.0.2 && <0.5.3.0 || >0.5.3.0 && <0.5.3.1 || >0.5.3.1 && <0.5.5.1 || >0.5.5.1 && <0.5.6.0 || >0.5.6.0 && <0.5.6.1 || >0.5.6.1 && <0.6.0.0 || >0.6.0.0 && <0.6.0.1 || >0.6.0.1
                       , unliftio ==0.2.19
  hs-source-dirs:      app
  default-language:    Haskell2010

test-suite pruvarilo-test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             MyLibTest.hs
  build-depends:       base >=4.11 && <4.12
